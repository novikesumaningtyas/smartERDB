<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_city"
        android:text="Date"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_toEndOf="@+id/tv_temp"
        android:layout_toRightOf="@+id/tv_temp"
        android:textColor="@color/black"
        android:text="C"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_desc"
        android:layout_marginTop="14dp"
        android:text="City"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="9pt" />


    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_temp"
        android:text="Sunny"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="7pt" />

    <TextView
        android:id="@+id/hai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:paddingTop="22pt"
        android:textColor="@color/black"
        android:text="Hello,"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/hai"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="User" />

    <TextView
        android:id="@+id/tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:text="30"
        android:textSize="15pt" />

    <ImageView
        android:id="@+id/smile"
        android:layout_width="38dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/tv_usage"
        android:layout_alignStart="@+id/tv_usage"
        android:layout_below="@+id/tv_date"
        android:visibility="invisible"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/msgbad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_usage"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="invisible"
        android:text="Uh oh, your electricity usage is high this time, please try to saving more" />

    <TextView
        android:id="@+id/msggood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_usage"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="invisible"
        android:text="Well done! You are saving energy consumption by having a low electricity usage,please keep going" />

    <TextView
        android:id="@+id/tv_usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/smile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:text="usage" />

    <ImageView
        android:id="@+id/bad"
        android:layout_width="38dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/smile"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/icons8_sad_48" />


</RelativeLayout>